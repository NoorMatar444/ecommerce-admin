datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

// ---------------------------------------------------------
// NextAuth Models (النماذج الجديدة الخاصة بتسجيل الدخول)
// ---------------------------------------------------------

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // العلاقة مع متاجرك (تمت إضافتها هنا)
  stores        Store[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ---------------------------------------------------------
// E-commerce Models (نماذج المتجر الخاصة بك)
// ---------------------------------------------------------

model Store {
  id         String      @id @default(uuid())
  name       String
  
  // تم التعديل: ربط المتجر بالمستخدم الحقيقي
  userId     String
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  billboards Billboard[] @relation("StoreToBillboard")
  categories Category[]  @relation("StoreToCategory")
  products   Product[]   @relation("StoreToProduct")
  colors     Color[]     @relation("StoreToColor")
  orders     Order[]     @relation("StoreToOrder")
  orderCods  OrderCod[]  @relation("StoreToOrderCod")
  email      Emails[]    @relation("StoreToEmails")
  
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@index([userId]) // مهم جداً للأداء مع relationMode = "prisma"
}

model Billboard {
  id         String     @id @default(uuid())
  storeId    String
  store      Store      @relation("StoreToBillboard", fields: [storeId], references: [id])
  label      String
  imageUrl   String
  categories Category[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([storeId])
}

model Category {
  id          String    @id @default(uuid())
  storeId     String
  store       Store     @relation("StoreToCategory", fields: [storeId], references: [id])
  billboardId String
  billboard   Billboard @relation(fields: [billboardId], references: [id])
  name        String
  products    Product[] @relation("CategoryToProduct")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([storeId])
  @@index([billboardId])
}

model Product {
  id           String      @id @default(uuid())
  storeId      String
  store        Store       @relation("StoreToProduct", fields: [storeId], references: [id])
  categoryId   String
  category     Category    @relation("CategoryToProduct", fields: [categoryId], references: [id])
  name         String
  priceEGP     Decimal
  priceAED     Decimal
  isFeatured   Boolean     @default(false) // تأكد من وجود هذا الحقل إذا كنت تستخدمه في الواجهة
  isArchived   Boolean     @default(false)
  quantity     Int         @default(1)
  isBestSeller Boolean     @default(false)
  isPromo      Boolean     @default(false)
  
  colorId      String
  color        Color       @relation(fields: [colorId], references: [id])
  images       Image[]
  orderItems   OrderItem[]

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([storeId])
  @@index([categoryId])
  @@index([colorId])
}

model Color {
  id         String    @id @default(uuid())
  storeId    String
  store      Store     @relation("StoreToColor", fields: [storeId], references: [id])
  name       String
  value      String
  stock      Int       @default(1)
  stockAED   Int       @default(1)
  products   Product[]
  isFeatured Boolean   @default(false)
  isArchived Boolean   @default(false)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([storeId])
}

model Order {
  id         String      @id @default(uuid())
  storeId    String
  store      Store       @relation("StoreToOrder", fields: [storeId], references: [id])
  orderItems OrderItem[]
  isPaid     Boolean     @default(false)
  phone      String      @default("")
  address    String      @default("")
  quantity   Int         @default(1)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@index([storeId])
}

model OrderCod {
  id                 String      @id @default(uuid())
  storeId            String
  store              Store       @relation("StoreToOrderCod", fields: [storeId], references: [id])
  orderItems         OrderItem[]
  totalPrice         Decimal
  fullName           String      @default("")
  email              String      @default("")
  country            String      @default("")
  city               String      @default("")
  address            String      @default("")
  region             String      @default("")
  phoneNumber        Decimal
  whatsPhoneNumber   Decimal     @default(1)
  appliedPromoCode   String      @default("")
  deliveryFee        Decimal     @default(1)
  originalTotalPrice Decimal     @default(1)
  savings            Decimal     @default(1)
  apartment          Int         @default(1)
  floor              Int         @default(1)
  building           String      @default("")
  notes              String      @default("")
  quantity           Int         @default(1)
  discountPercentage Int         @default(1)
  instaPay           Boolean     @default(false)
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt

  @@index([storeId])
}

model OrderItem {
  id         String    @id @default(uuid())
  orderId    String?
  order      Order?    @relation(fields: [orderId], references: [id])
  orderCodId String?
  orderCod   OrderCod? @relation(fields: [orderCodId], references: [id])
  productId  String
  product    Product   @relation(fields: [productId], references: [id])
  quantity   Int       @default(1)

  @@index([orderId])
  @@index([productId])
  @@index([orderCodId])
}

model Image {
  id        String   @id @default(uuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  url       String
  position  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
}

model Emails {
  id        String   @id @default(uuid())
  storeId   String
  store     Store    @relation("StoreToEmails", fields: [storeId], references: [id])
  fullName  String   @default("")
  email     String   @default("")
  Message   String   @default("")
  createdAt DateTime @default(now())

  @@index([storeId])
}